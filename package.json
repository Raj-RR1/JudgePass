{
  "name": "judge-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
  "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
  "dev:api": "cd apps/api && npm run dev",
  "dev:web": "cd apps/web && npm run dev",
  "build": "npm run build:web",
  "build:web": "cd apps/web && npm run build",
  "build:api": "cd apps/api && npm run build",
  "build:all": "npm run build:web && npm run build:api",
  "contracts:build": "cd contracts && forge build",
  "contracts:test": "cd contracts && forge test",
  "contracts:deploy": "cd contracts && forge script script/DeployINFT.s.sol --rpc-url 0g_testnet --broadcast --verify",
  "install:all": "npm install && cd apps/api && npm install && cd ../web && npm install"
},
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
